<aside class="sidebar" id="sidebar">
  <div class="sidebar-top">
    <span class="logo">BICAP</span>

    <!-- ✅ NÚT THU / MỞ -->
    <button class="toggle-btn" id="toggleBtn" title="Thu / mở menu">
      <i class="fas fa-bars"></i>
    </button>
  </div>

  <nav class="menu">
    <a href="/marketplace" class="menu-item" data-tooltip="Marketplace">
      <i class="fas fa-store"></i>
      <span>Marketplace</span>
    </a>

    <a href="/my-orders" class="menu-item" data-tooltip="Đơn hàng">
      <i class="fas fa-box"></i>
      <span>Đơn hàng</span>
    </a>

    <a href="/cart" class="menu-item" data-tooltip="Giỏ hàng">
      <i class="fas fa-shopping-cart"></i>
      <span>Giỏ hàng</span>
    </a>


    <a href="/profile" class="menu-item" data-tooltip="Hồ sơ">
      <i class="fas fa-user"></i>
      <span>Hồ sơ</span>
    </a>
  </nav>

  <div class="user" id="userMenu">
    <div class="user-info">
      <div class="avatar">
        <%= user.email[0].toUpperCase() %>
      </div>

      <div class="user-text">
        <strong><%= user.email %></strong>
        <small>Retailer</small>
      </div>
    </div>

    <div class="user-dropdown">
      <form method="post" action="/logout">
        <button type="submit">Đăng xuất</button>
      </form>
    </div>
  </div>
</aside>
