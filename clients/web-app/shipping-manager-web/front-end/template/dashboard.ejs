<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Shipping Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <a class="navbar-brand" href="/">Shipping Manager</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/shipments">Quản lý Vận đơn</a>
            </li>
          </ul>
          <span class="navbar-text text-white">
            Xin chào, <%= typeof user !== 'undefined' ? user.username : 'Admin' %>
          </span>
          <form action="/logout" method="POST" class="d-inline">
             <button type="submit" class="btn btn-outline-light ms-3 btn-sm">Đăng xuất</button>
          </form>
        </div>
      </div>
    </nav>

    <div class="container">
        <h2 class="mb-4">Tổng quan hoạt động</h2>
        
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">Tổng vận đơn</div>
                    <div class="card-body">
                        <h1 class="card-title"><%= report.totalShipments || 0 %></h1>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">Chờ xử lý</div>
                    <div class="card-body">
                        <h1 class="card-title"><%= report.pendingShipments || 0 %></h1>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Đang vận chuyển</div>
                    <div class="card-body">
                        <h1 class="card-title"><%= report.inTransitShipments || 0 %></h1>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Đã giao hàng</div>
                    <div class="card-body">
                        <h1 class="card-title"><%= report.deliveredShipments || 0 %></h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-secondary mb-3">
                    <div class="card-header">Tổng số tài xế</div>
                    <div class="card-body">
                        <h1 class="card-title"><%= report.totalDrivers || 0 %></h1>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-dark mb-3">
                    <div class="card-header">Tổng số xe</div>
                    <div class="card-body">
                        <h1 class="card-title"><%= report.totalVehicles || 0 %></h1>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-header">Báo cáo chờ xử lý</div>
                    <div class="card-body">
                        <h1 class="card-title"><%= report.pendingDriverReportsCount || 0 %></h1>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Tài xế sẵn sàng</div>
                    <div class="card-body">
                        <h1 class="card-title"><%= report.totalDrivers || 0 %></h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Vận đơn gần đây
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Mã đơn hàng</th>
                            <th>Từ</th>
                            <th>Đến</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (shipments && shipments.length > 0) { %>
                            <% shipments.slice(0, 5).forEach(function(shipment) { %>
                                <tr>
                                    <td>#<%= shipment.id %></td>
                                    <td>#<%= shipment.orderId %></td>
                                    <td><%= shipment.fromLocation %></td>
                                    <td><%= shipment.toLocation %></td>
                                    <td>
                                        <span class="badge bg-<%= shipment.status === 'DELIVERED' ? 'success' : (shipment.status === 'IN_TRANSIT' ? 'warning' : 'secondary') %>">
                                            <%= shipment.status %>
                                        </span>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center">Chưa có dữ liệu</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <a href="/shipments" class="btn btn-primary btn-sm">Xem tất cả</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>