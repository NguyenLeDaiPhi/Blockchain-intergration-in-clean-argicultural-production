  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-3 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Admin</a></li>
            <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Dashboard</li>
          </ol>
          <h6 class="font-weight-bolder mb-0">Xét duyệt hồ sơ đăng ký</h6>
        </nav>
      </div>
    </nav>

    <div class="container-fluid px-2 px-md-4">
      
      <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-2 ps-3">
              <div class="d-flex justify-content-between">
                <div>
                  <p class="text-sm mb-0 text-capitalize">Chờ phê duyệt</p>
                  <h4 class="mb-0"><%= pendingCount || 0 %></h4>
                </div>
                <div class="icon icon-md icon-shape bg-gradient-warning shadow-dark shadow text-center border-radius-lg">
                  <i class="material-symbols-rounded opacity-10">pending_actions</i>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-2 ps-3">
              <div class="d-flex justify-content-between">
                <div>
                  <p class="text-sm mb-0 text-capitalize">Tổng User</p>
                  <h4 class="mb-0"><%= totalUsers || 0 %></h4>
                </div>
                <div class="icon icon-md icon-shape bg-gradient-primary shadow-primary shadow text-center border-radius-lg">
                  <i class="material-symbols-rounded opacity-10">group</i>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-2 ps-3">
              <div class="d-flex justify-content-between">
                <div>
                  <p class="text-sm mb-0 text-capitalize">Tổng Farm</p>
                  <h4 class="mb-0"><%= totalFarms || 0 %></h4>
                </div>
                <div class="icon icon-md icon-shape bg-gradient-success shadow-success shadow text-center border-radius-lg">
                  <i class="material-symbols-rounded opacity-10">agriculture</i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-dark shadow-dark border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center px-3">
                <h6 class="text-white text-capitalize ps-3 mb-0">Danh sách yêu cầu nâng cấp Role</h6>
                <button class="btn btn-sm btn-outline-white mb-0" onclick="window.location.reload()">
                    <i class="material-symbols-rounded text-sm">refresh</i> Làm mới
                </button>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Người dùng</th>
                      <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Role mong muốn</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Giấy phép</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ngày nộp</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Hành động</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (requests && Array.isArray(requests) && requests.length > 0) { %>
                        <% requests.forEach(function(req) { %>
                        <tr id="row-<%= req.requestId %>">
                          <td>
                            <div class="d-flex px-3 py-1">
                              <div class="d-flex flex-column justify-content-center">
                                <h6 class="mb-0 text-sm"> <%= req.userName %></h6>
                                <p class="text-xs text-secondary mb-0"><%= req.email || 'No Email' %></p>
                              </div>
                            </div>
                          </td>
                          <td>
                            <% if (req.requestedRoleName === 'FARM_OWNER') { %>
                                <span class="badge badge-sm bg-gradient-success">Chủ Trang Trại</span>
                            <% } else if (req.requestedRoleName === 'SHIPPER') { %>
                                <span class="badge badge-sm bg-gradient-info">Vận Chuyển</span>
                            <% } else { %>
                                <span class="badge badge-sm bg-gradient-secondary"><%= req.requestedRoleName %></span>
                            <% } %>
                          </td>
                          <td class="align-middle text-center text-sm">
                            <div class="d-flex justify-content-center gap-2">
                                <% 
                                    let images = [];
                                    try { images = JSON.parse(req.documentUrls || '[]'); } catch(e) { images = [req.documentUrls]; }
                                %>
                                <% if(images.length > 0) { %>
                                    <img src="<%= images[0] %>" class="license-thumb border" alt="license" 
                                         onclick="showImageModal('<%= images[0] %>')">
                                    <% if(images.length > 1) { %>
                                        <span class="badge bg-secondary text-xxs align-self-end">+<%= images.length - 1 %></span>
                                    <% } %>
                                <% } else { %>
                                    <span class="text-xs text-secondary">Không có ảnh</span>
                                <% } %>
                            </div>
                          </td>
                          <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold"><%= new Date(req.createdAt).toLocaleDateString('vi-VN') %></span>
                          </td>
                          <td class="align-middle text-center">
                            <button class="btn btn-sm bg-gradient-success mb-0 me-1" onclick="approveRequest('<%= req.requestId %>')">
                                <i class="material-symbols-rounded text-sm">check</i> Duyệt
                            </button>
                            <button class="btn btn-sm btn-outline-danger mb-0" onclick="openRejectModal('<%= req.requestId %>')">
                                <i class="material-symbols-rounded text-sm">close</i> Từ chối
                            </button>
                          </td>
                        </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center py-4 text-secondary">Không có yêu cầu nào đang chờ xử lý.</td>
                        </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body p-0 text-center bg-dark border-radius-lg position-relative">
            <button type="button" class="btn btn-link text-white position-absolute top-0 end-0 m-2" data-bs-dismiss="modal">
                <i class="material-symbols-rounded text-2xl">close</i>
            </button>
            <img src="" id="previewImage" class="img-fluid border-radius-lg" style="max-height: 80vh;">
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Từ chối yêu cầu</h5>
          <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="rejectRequestId">
            <div class="input-group input-group-outline my-3">
                <label class="form-label">Lý do từ chối</label>
                <input type="text" class="form-control" id="rejectReason">
            </div>
            <p class="text-xs text-muted">User sẽ nhận được thông báo về lý do này.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
          <button type="button" class="btn bg-gradient-danger" onclick="confirmReject()">Xác nhận Từ chối</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/assets/js/core/bootstrap.min.js"></script>
  <script src="/assets/js/material-dashboard.min.js?v=3.2.0"></script>
  
  <script>
    // --- Logic Xử lý ---

    // 1. Hiển thị ảnh lớn
    function showImageModal(src) {
        document.getElementById('previewImage').src = src;
        new bootstrap.Modal(document.getElementById('imageModal')).show();
    }

    // 2. Gọi API Duyệt (Approve)
    async function approveRequest(requestId) {
        if(!confirm('Bạn có chắc chắn muốn duyệt yêu cầu này?')) return;

        try {
            // Thay đổi URL này thành URL của API Gateway hoặc Service của bạn
            const response = await fetch(`/api/v1/role-requests/${requestId}/approve`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    // 'Authorization': 'Bearer ' + localStorage.getItem('token') // Nếu cần token
                }
            });

            if (response.ok) {
                // Hiệu ứng xóa dòng thành công
                const row = document.getElementById(`row-${requestId}`);
                row.style.transition = 'all 0.5s';
                row.style.opacity = '0';
                setTimeout(() => row.remove(), 500);
                alert('Đã duyệt thành công!');
            } else {
                const text = await response.text();
                alert('Lỗi: ' + text);
            }
        } catch (error) {
            console.error(error);
            alert('Có lỗi xảy ra khi kết nối server.');
        }
    }

    // 3. Logic Từ chối (Reject)
    let rejectModalInstance;
    
    function openRejectModal(requestId) {
        document.getElementById('rejectRequestId').value = requestId;
        document.getElementById('rejectReason').value = ''; // Reset input
        const el = document.getElementById('rejectModal');
        rejectModalInstance = new bootstrap.Modal(el);
        rejectModalInstance.show();
    }

    async function confirmReject() {
        const requestId = document.getElementById('rejectRequestId').value;
        const reason = document.getElementById('rejectReason').value;

        if (!reason.trim()) {
            alert("Vui lòng nhập lý do từ chối!");
            return;
        }

        try {
            const response = await fetch(`/api/v1/role-requests/${requestId}/reject`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(reason) // Gửi string lý do
            });

            if (response.ok) {
                rejectModalInstance.hide();
                const row = document.getElementById(`row-${requestId}`);
                row.remove();
                alert('Đã từ chối yêu cầu.');
            } else {
                alert('Lỗi khi từ chối.');
            }
        } catch (error) {
            console.error(error);
        }
    }
  </script>
</body>
</html>